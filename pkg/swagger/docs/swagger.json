{
    "swagger": "2.0",
    "info": {
      "title": "Sample API",
      "description": "A sample API to illustrate OpenAPI concepts",
      "version": "1.0.0"
    },
    "host": "api.example.com",
    "basePath": "/v1",
    "schemes": [
      "https"
    ],
    "paths": {
      "/users": {
        "get": {
          "summary": "Returns a list of users",
          "description": "Optional extended description in CommonMark or HTML",
          "produces": [
            "application/json"
          ],
          "responses": {
            "200": {
              "description": "Successful response",
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/User"
                }
              }
            }
          }
        }
      }
    },
    "definitions": {
      "User": {
        "type": "object",
        "required": [
          "id",
          "name"
        ],
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          }
        }
      }
    }
  }